@model RestaurantManagerApplication.Models.RespondToComplaintViewModel;

<div class="container">

    <!-- Outer Row -->
    <div class="row justify-content-center">

        <div class="col-xl-6 col-lg-6 col-md-6">
            <div class="card o-hidden border-0 shadow-lg my-5">
                <div class="card-body p-0">
                    <!-- Nested Row within Card Body -->
                    <div class="row">
                        <div class="col-lg-12">
                            <div class="p-5">
                                @using (Html.BeginForm())
                                {
                                    <div class="form-group">
                                        <label class="control-label ">Your Response</label>
                                        @Html.EditorFor(model => model.text, new { htmlAttributes = new { @class = "form-control form-control-user " } })
                                    </div>
                                    
                                    @Html.HiddenFor(model => model.complaintId, new { htmlAttributes = new { @class = "form-control form-control-user " } })
                                    
                                    <input type="submit" value="Respond" class="btn btn-success " />
                                }
                            </div>
                        </div>
                    </div>
                </div>
            </div>

        </div>

    </div>

</div>

