                    @Model.MostActiveEmployee.Name @Model.MostActiveEmployee.Surname
                </div>
            </div>
        </div>
        <!-- Donut Chart -->
        <div class="col-xl-4 col-lg-5">
            <div class="card shadow mb-4">
                <!-- Card Header - Dropdown -->
                <div class="card-header py-3">
                    <h6 class="m-0 font-weight-bold text-primary">Most popular food</h6>
                </div>
                <!-- Card Body -->
