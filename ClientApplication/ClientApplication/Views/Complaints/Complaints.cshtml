
@using ClientApplication.Models;
@model ClientApplication.Models.ViewModels.ComplaintViewModel


<!DOCTYPE html>
<html lang="en">

<head>
    <!-- basic -->
    <meta charset="utf-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <!-- mobile metas -->
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <meta name="viewport" content="initial-scale=1, maximum-scale=1">
    <!-- site metas -->
    <title>Spicyo</title>
    <meta name="keywords" content="">
    <meta name="description" content="">
    <meta name="author" content="">
    <!-- bootstrap css -->
    <link rel="stylesheet" href="~/css/bootstrap.min.css">
    <!-- owl css -->
    <link rel="stylesheet" href="~/css/owl.carousel.min.css">
    <!-- style css -->
    <link rel="stylesheet" href="~/css/style.css">
    <!-- responsive-->
    <link rel="stylesheet" href="~/css/responsive.css">
    <!-- image-checkbox-->
    <link rel="stylesheet" href="~/css/image-checkbox.css">
    <!-- awesome fontfamily -->
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/4.7.0/css/font-awesome.min.css">

    <!--[if lt IE 9]>
        <script src="https://oss.maxcdn.com/html5shiv/3.7.3/html5shiv.min.js"></script>
        <script src="https://oss.maxcdn.com/respond/1.4.2/respond.min.js"></script><![endif]-->

</head>
<!-- body -->

<body class="main-layout Recipes_page">

    <div class="container-fluid">

        <!-- Page Heading -->
        <h1 class="h3 mb-2 text-gray-800">User complaints</h1>
        <p class="mb-4"></p>




            @if (Model.Complaints != null && Model.Complaints.Count > 0)
            {
            <table class="table"  style="text-align: center;  margin-top: 65px">
                <thead>
                    <tr>
                        <th style="width: 40%" scope="col">Content</th>
                        <th style="width: 40%" scope="col">Response</th>
                        <th scope="col">Open</th>
                        <th scope="col">Order Id</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var complaint in Model.Complaints)
                    {
                        <tr>
                            <td>@complaint.Content</td>
                            <td>@complaint.Response</td>
                            <td>@complaint.Open</td>
                            <td>@complaint.OrderId</td>
                        </tr>
                    }
                </tbody>
            </table>
            }
            else
            {
                <div style="text-align: center;  margin-top: 65px">
                    <h1> You haven't send any complaints yet. </h1>
                </div>
            }


    </div>


    @section Sidebar{
        <!-- Sidebar  -->
        <nav id="sidebar">

            <div id="dismiss">
                <i class="fa fa-arrow-left"></i>
            </div>

            <ul class="list-unstyled components">
                <li>
                    <a asp-area="" asp-controller="Restaurants" asp-action="Index">Restaurants</a>
                </li>
                <li>
                    <a asp-area="" asp-controller="Restaurants" asp-action="FavouriteRestaurants">Favourite restaurants</a>
                </li>
                <li>
                    <a asp-area="" asp-controller="User" asp-action="Orders">My Orders</a>
                </li>
                <li class="active">
                    <a asp-area="" asp-controller="Complaints" asp-action="Complaints">My Complaints</a>
                </li>
            </ul>

        </nav>
    }

    @section WebsiteMap{
        <div class="col-md-12">
            <ul class="lik">
                <li> <a asp-area="" asp-controller="Restaurants" asp-action="Index">Restaurants</a></li>
                <li> <a asp-area="" asp-controller="Restaurants" asp-action="FavouriteRestaurants">Favourite restaurants</a></li>
                <li> <a asp-area="" asp-controller="User" asp-action="Orders">My Orders</a></li>
                <li class="active"> <a asp-area="" asp-controller="Complaints" asp-action="Complaints">My Complaints</a></li>
            </ul>
        </div>
    }

    <!-- Javascript files-->
    <script src="//cdnjs.cloudflare.com/ajax/libs/jquery/2.2.2/jquery.min.js"></script>
    <script src="//maxcdn.bootstrapcdn.com/bootstrap/3.3.6/js/bootstrap.min.js"></script>
    <script src="~/js/jquery.min.js"></script>
    <script src="~/js/popper.min.js"></script>
    <script src="~/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/owl.carousel.min.js"></script>
    <script src="~/js/custom.js"></script>
    <script src="~/js/jquery.mCustomScrollbar.concat.min.js"></script>
    <script src="~/js/jquery.mCustomScrollbar.concat.min.js"></script>
    <script src="~/js/image-checkbox.js"></script>
    <script src="~/js/sendOrder.js"></script>

    <script src="~/js/openRestaurant.js"></script>

    <script>
        $(document).ready(function (sections) {
            var owl = $('.owl-carousel');
            owl.owlCarousel({
                margin: 10,
                nav: true,
                loop: false,
                responsive: {
                    0: {
                        items: 1
                    },
                    600: {
                        items: 2
                    },
                    1000: {
                        items: 5
                    }
                }
            })
        })
    </script>

 

</body>

</html>
