@model ClientApplication.Models.ViewModels.RestaurantMenuViewModel
 
<!DOCTYPE html>
<html lang="en">

<head>
    <!-- basic -->
    <meta charset="utf-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <!-- mobile metas -->
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <meta name="viewport" content="initial-scale=1, maximum-scale=1">
    <!-- site metas -->
    <title>Spicyo</title>
    <meta name="keywords" content="">
    <meta name="description" content="">
    <meta name="author" content="">
    <!-- bootstrap css -->
    <link rel="stylesheet" href="~/css/bootstrap.min.css">
    <!-- owl css -->
    <link rel="stylesheet" href="~/css/owl.carousel.min.css">
    <!-- style css -->
    <link rel="stylesheet" href="~/css/style.css">
    <!-- responsive-->
    <link rel="stylesheet" href="~/css/responsive.css">
    <!-- image-checkbox-->
    <link rel="stylesheet" href="~/css/image-checkbox.css">
    <!-- awesome fontfamily -->
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/4.7.0/css/font-awesome.min.css">

    <!--[if lt IE 9]>
      <script src="https://oss.maxcdn.com/html5shiv/3.7.3/html5shiv.min.js"></script>
      <script src="https://oss.maxcdn.com/respond/1.4.2/respond.min.js"></script><![endif]-->
</head>
<!-- body -->

<body class="main-layout Recipes_page">

    <div class="wrapper">
        <div id="content">
            <div class="yellow_bg">
                <div class="container">
                    <div class="row">
                        <div class="col-md-12">
                            <div class="title">
                                <h2>Our Menu</h2>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
            <!-- section -->
            <section class="resip_section">
                <div class="container">
                    <div class="row">
                        <div class="container">
                            @foreach (var sections in Model.sections)
                            {
                                <div class="col-md-12">
                                    <div class="ourheading">
                                        <h2>@sections.name</h2>
                                    </div>
                                </div>
                                <div class="row">
                                    <div class="col-md-12">
                                        <div class="owl-carousel owl-theme">
                                            @foreach (var position in sections.positions)
                                            {
                                                <div class="item">
                                                    @*<div class="product_blog_img">
                                                    <img src="~/images/rs1.png" alt="#" />
                                                </div>*@
                                                    <input id="@position.id" class="form-control" style="display:block; margin: 0 auto; margin-bottom:20px;" type="number" value="0" min="0"/>
                                                    <div class="product_blog_img">

                                                        <img src="~/images/rs1.png">
                                                    </div>
                                                    <div class="product_blog_cont">
                                                        <h3>@position.name</h3>
                                                        <h3>@position.description</h3>
                                                        <h4><span class="theme_color">$</span>@position.price</h4>

                                                    </div>
                                                </div>
                                            }
                                        </div>
                                    </div>
                                </div>
                            }
                        </div>
                    </div>
                </div>
            </section>
            <div class="yellow_bg" style="margin-top:0px">
                <div class="container">
                        <h1>Order address <strong class="h6">(not required)</strong></h1>
                    <div class="row">
                        <div class="col-md-12">
                            <input class="form-control" type="text" placeholder="City" id="city" />
                        </div>
                    </div>
                    <div class="row">
                        <div class="col-md-12">
                            <input class="form-control" type="text" placeholder="Street" id="street" />
                        </div>
                    </div>
                    <div class="row">
                        <div class="col-md-12">
                            <input class="form-control" type="text" placeholder="Post Code" id="postCode" />
                        </div>
                    </div>
                    <div class="row">
                        <div class="col-md-12">
                            <input class="form-control" type="text" placeholder="Discount Code" id="discountID" />
                        </div>
                    </div>
                    <div class="row">
                        <div class="col-md-12">
                            <select id="paymentMethod" style="height: 60px" class="form-control" asp-items="Html.GetEnumSelectList< ClientApplication.Models.ViewModels.PaymentMethodModel>()">
                                <option selected="selected" value="">Please select payment method</option>
                            </select>
                        </div>
                        <div class="col-md-12">
                            <button class="send" type="submit" onclick="sendOrder(@Model.restaurant.id)">Submit</button>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
    <div class="overlay"></div>

    @section Sidebar{
        <!-- Sidebar  -->
        <nav id="sidebar">

            <div id="dismiss">
                <i class="fa fa-arrow-left"></i>
            </div>

            <ul class="list-unstyled components">
                <li class="active">
                    <a asp-area="" asp-controller="Restaurants" asp-action="Index">Restaurants</a>
                </li>
                <li>
                    <a asp-area="" asp-controller="Restaurants" asp-action="FavouriteRestaurants">Favourite restaurants</a>
                </li>
                <li>
                    <a asp-area="" asp-controller="User" asp-action="Orders">My Orders</a>
                </li>
                <li>
                    <a asp-area="" asp-controller="Complaints" asp-action="Complaints">My Complaints</a>
                </li>
            </ul>

        </nav>
    }

    @section WebsiteMap{
        <div class="col-md-12">
                <ul class="lik">
                    <li> <a asp-area="" asp-controller="Restaurants" asp-action="Index">Restaurants</a></li>
                    <li> <a asp-area="" asp-controller="Restaurants" asp-action="FavouriteRestaurants">Favourite restaurants</a> </li>
                    <li> <a asp-area="" asp-controller="User" asp-action="Orders">My Orders</a></li>
                    <li> <a asp-area="" asp-controller="Complaints" asp-action="Complaints">My Complaints</a></li>
                </ul>
        </div>
    }

    <!-- Javascript files-->
    <script src="//cdnjs.cloudflare.com/ajax/libs/jquery/2.2.2/jquery.min.js"></script>
    <script src="//maxcdn.bootstrapcdn.com/bootstrap/3.3.6/js/bootstrap.min.js"></script>
    <script src="~/js/jquery.min.js"></script>
    <script src="~/js/popper.min.js"></script>
    <script src="~/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/owl.carousel.min.js"></script>
    <script src="~/js/custom.js"></script>
    <script src="~/js/jquery.mCustomScrollbar.concat.min.js"></script>
    <script src="~/js/jquery.mCustomScrollbar.concat.min.js"></script>
    <script src="~/js/image-checkbox.js"></script>
    <script src="~/js/sendOrder.js"></script>

    <script src="~/js/openRestaurant.js"></script>

    <script>
        $(document).ready(function (sections) {
            var owl = $('.owl-carousel');
            owl.owlCarousel({
                margin: 10,
                nav: true,
                loop: false,
                responsive: {
                    0: {
                        items: 1
                    },
                    600: {
                        items: 2
                    },
                    1000: {
                        items: 5
                    }
                }
            })
        })
    </script>

</body>

</html>