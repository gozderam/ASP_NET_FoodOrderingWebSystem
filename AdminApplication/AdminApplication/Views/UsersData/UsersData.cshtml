
@using AdminApplication.Models;
@model AdminApplication.Models.UsersDataViewModel


<div class="container-fluid">

      <!-- Page Heading -->
      <h1 class="h3 mb-2 text-gray-800">Users Data</h1>
      <p class="mb-4"></p>

      <!-- DataTales Example -->
      <div class="card shadow mb-4">
          <div class="card-header py-3">
              <h6 class="m-0 font-weight-bold text-primary">Users Data</h6>
          </div>
          <div class="card-body">
              <div class="table-responsive">
                  <table class="table table-bordered" id="dataTable" width="100%" cellspacing="0">
                      <thead>
                          <tr>
                              <th>Id</th>
                              <th>Name</th>
                              <th>Surname</th>
                              <th>Email</th>
                              <th>City</th>
                              <th>Street</th>
                              <th>Postcode</th>
                          </tr>
                      </thead>
                      <tfoot>
                          <tr>
                              <th>Id</th>
                              <th>Name</th>
                              <th>Surname</th>
                              <th>Email</th>
                              <th>City</th>
                              <th>Street</th>
                              <th>Postcode</th>
                          </tr>
                      </tfoot>
                      <tbody>
                          @foreach (var user in Model.users)
                          {
                          <tr>
                              <td>@user.Id</td>
                              <td>@user.Name</td>
                              <td>@user.Surname</td>
                              <td>@user.Email</td>
                              @if (@user.Address != null)
                              {
                                  <td>@user.Address.City</td>
                                  <td>@user.Address.Street</td>
                                  <td>@user.Address.Postcode</td>
                              }
                              else
                              {
                                  <td>---</td>
                                  <td>---</td>
                                  <td>---</td>
                              }
                          </tr>
                          }
                      </tbody>
                  </table>
              </div>
          </div>
      </div>

  </div>
