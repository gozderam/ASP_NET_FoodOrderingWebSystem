
@using AdminApplication.Models;
@model AdminApplication.Models.RestaurantComplaintViewModel


<div class="container-fluid">

    <!-- Page Heading -->
    <h1 class="h3 mb-2 text-gray-800">Restaurant Complaints</h1>
    <p class="mb-4"></p>

    <!-- DataTales Example -->
    <div class="card shadow mb-4">
        <div class="card-header py-3">
            <h6 class="m-0 font-weight-bold text-primary">
            @(Model.RestaurantId == -1 ? "Provide Restaurant Id" : $"Complaints for restaurant with id {Model.RestaurantId}")</h6>

        </div>
        <div class="card-body">

            <!-- Topbar Search -->
            <form class=" form-inline mb-3 mw-100 navbar-search">
                <div id="searchDiv" class="input-group">
                    <input id="restaurantIdInput" type="number" class="form-control bg-light border-0 small" placeholder="Restaurant Id..."
                           aria-label="Search" aria-describedby="basic-addon2">
                    <div class="input-group-append">
                        <button id="searchByRestaurantId" class="btn btn-primary" type="button">
                            <i class="fas fa-search fa-sm"></i>
                        </button>
                    </div>
                </div>
            </form>

            <div class="table-responsive">
                <table class="table table-bordered" id="dataTable" width="100%" cellspacing="0">
                    <thead>
                        <tr>
                            <th>Content</th>
                            <th>Response</th>
                            <th>Open</th>
                            <th>Order Id</th>
                        </tr>
                    </thead>
                    <tfoot>
                        <tr>
                            <th>Content</th>
                            <th>Response</th>
                            <th>Open</th>
                            <th>Order Id</th>
                        </tr>
                    </tfoot>
                    <tbody>
                        @foreach (var complaint in Model.Complaints)
                        {
                            <tr>
                                <td>@complaint.Content</td>
                                <td>@complaint.Response</td>
                                <td>@complaint.Open</td>
                                <td>@complaint.OrderId</td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
    </div>

   

</div>
